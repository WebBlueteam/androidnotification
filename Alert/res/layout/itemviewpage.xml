<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.alert"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#e9e9e7"
    android:id="@+id/item_viewpage">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e9e9e7"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#ffffff" >

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border" >

                <ImageView
                    android:id="@+id/main_img"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avata" />
            </RelativeLayout>

            <TextView
                android:id="@+id/main_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/relativeLayout3"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/relativeLayout3"
                android:padding="5dp"
               	android:textSize="12sp"
				android:ellipsize="end"
				android:maxLines="3"
				android:fontFamily="sans-serif-light"
                android:text="Trường đại học khoa học tự nhiên, trường đại hoc khoa học tự nhiên trường đại học khoa học tự nhiên Trường đại học khoa học tự nhiên, trường đại hoc khoa học tự nhiên trường đại học khoa học tự nhiên"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                android:id="@+id/chitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/relativeLayout3"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="18dp"
                android:text="Chi tiết"
                android:textSize="12sp"
                android:textColor="#67b6b3"
                android:textStyle="bold|italic"
                android:fontFamily="sans-serif-light"/>

        </RelativeLayout>

        <com.example.alert.CircleImageView
            android:id="@+id/avata_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/textView1"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:layout_marginTop="5dp"
            android:src="@drawable/avata"
            app:border_color="#8ac8c5"
            app:border_width="2dp"
             />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout2"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/avata_user"
            android:text="HANFUN"
            android:textColor="#8ac8c5"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>